{
  "name": "noga",
  "version": "0.1.0",
  "description": "Noga - internal SQLite-based DB management service (Node.js + TypeScript)",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:web": "npm run dev --prefix web",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:web\"",
    "build:web": "npm run build --prefix web",
    "build:all": "npm run build && npm run build:web"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "sql.js": "^1.13.0",
    "cors": "^2.8.5",
    "body-parser": "^1.20.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.7.4",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.6",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3",
    "concurrently": "^9.0.0"
  }
}
